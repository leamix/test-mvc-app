{
    "name": "leamix/tasks",
    "description": "",
    "minimum-stability": "dev",
    "license": "proprietary",
    "author": "leamix <x8p@leamix.com>",
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ramsey/uuid": "^3.0@dev",
        "zendframework/zend-diactoros": "^1.6",
        "npm-asset/holderjs": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "src\\": "src/",
            "app\\": "app/"
        }
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": "vendor"
    },
    "scripts": {
        "serve": "php -S localhost:8080 -t public",
        "test": "phpunit --colors=always"
    }
